import os

# List of directories and files to create
project_structure = {
    "app": [
        "__init__.py", "routes.py", "auth.py", "meme_scraper.py", "meme_generator.py",
        "scheduler.py", "instagram_api.py", "database.py", "config.py"
    ],
    "tests": [
        "test_routes.py", "test_auth.py", "test_scraping.py", "test_meme_generator.py", "test_instagram_api.py"
    ],
    "docs": [
        "setup_guide.md", "usage_guide.md", "api_documentation.md"
    ],
    ".gitignore": [],
    ".env": [],
    "README.md": []
}

# Function to create the directory structure
def create_structure(base_dir, structure):
    for directory, files in structure.items():
        # Create the directory
        dir_path = os.path.join(base_dir, directory)
        os.makedirs(dir_path, exist_ok=True)  # Create directory if it doesn't exist

        # Create the files in the directory
        for file in files:
            file_path = os.path.join(dir_path, file)
            if not os.path.exists(file_path):  # Check if the file already exists
                with open(file_path, 'w') as f:
                    pass  # Create an empty file

# Create files at the root directory (README.md, .gitignore, etc.)
for file in project_structure[".gitignore"] + project_structure[".env"] + project_structure["README.md"]:
    with open(file, 'w') as f:
        pass  # Create empty files

# Start creating directories and files
create_structure(".", project_structure)
print("Project structure created successfully!")
